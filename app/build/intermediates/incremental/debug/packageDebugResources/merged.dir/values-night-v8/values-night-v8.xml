<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BlueApp" parent="Theme.Material3.Light.NoActionBar">
        
        <item name="colorPrimary">@color/button_color_selector</item>
        <item name="colorPrimaryVariant">@color/button_color_selector</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryContainer">#72AD7AFF</item>
    </style>
    <style name="Theme.BlueApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.BlueApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BlueApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Widget.BlueApp.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        
        <item name="android:background">@drawable/checkbox_background</item>
        
        <item name="android:textColor">#333333</item>
        
        <item name="android:textSize">16sp</item>
        
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingBottom">12dp</item>
        
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="Widget.BlueApp.Spinner" parent="Widget.AppCompat.Spinner">
        
        <item name="android:background">@drawable/spinner_background</item>
        
        <item name="android:textSize">16sp</item>
        
        <item name="android:textColor">#333333</item>
        
        <item name="android:textAlignment">center</item>
        
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
</resources>