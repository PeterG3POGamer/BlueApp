<!-- res/drawable/toast_background_error.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo normal -->
    <solid android:color="#FAF3E0" /> <!-- Color crema/beige claro -->

    <!-- Borde redondeado en la parte inferior -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp" /> <!-- Radio de esquinas de 8dp para la parte inferior -->

    <!-- Si deseas un borde delgado negro -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Borde de 1dp de ancho y color negro -->
</shape>
