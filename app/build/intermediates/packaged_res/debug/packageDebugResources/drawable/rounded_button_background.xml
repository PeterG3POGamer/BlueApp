<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray"/> <!-- Cambia este color según tus preferencias -->
            <corners android:radius="16dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/gray"/> <!-- Cambia el color y ancho del borde si es necesario -->
        </shape>
    </item>

    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/purple_700"/> <!-- Cambia este color según tus preferencias -->
            <corners android:radius="16dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/purple_700"/> <!-- Cambia el color y ancho del borde si es necesario -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape>
            <solid android:color="@color/purple_500"/> <!-- Cambia este color según tus preferencias -->
            <corners android:radius="16dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/purple_500"/> <!-- Cambia el color y ancho del borde si es necesario -->
        </shape>
    </item>
</selector>
