<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo para estado presionado -->
    <solid android:color="#D9D9D9" /> <!-- Color de fondo presionado -->

    <!-- Esquinas redondeadas -->
    <corners android:radius="0dp" />

    <!-- Borde con sombra -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Color del borde -->

    <!-- Efecto de sombra -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp" />
</shape>
