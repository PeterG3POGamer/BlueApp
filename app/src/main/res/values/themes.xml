<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryContainer">#72AD7AFF</item>
    </style>

    <style name="Theme.BlueApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.BlueApp.Spinner" parent="Widget.AppCompat.Spinner">
        <!-- Fondo del spinner -->
        <item name="android:background">@drawable/spinner_background</item>
        <!-- Tamaño del texto -->
        <item name="android:textSize">16sp</item>
        <!-- Color del texto -->
        <item name="android:textColor">#333333</item>
        <!-- Alineación del texto -->
        <item name="android:textAlignment">center</item>
        <!-- Padding -->
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="Widget.BlueApp.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Fondo del CheckBox -->
        <item name="android:background">@drawable/checkbox_background</item>
        <!-- Color del texto -->
        <item name="android:textColor">#333333</item>
        <!-- Tamaño del texto -->
        <item name="android:textSize">16sp</item>
        <!-- Padding -->
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:paddingBottom">12dp</item>
        <!-- Margen -->
        <item name="android:layout_margin">4dp</item>
    </style>





    <style name="Theme.BlueApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlueApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>