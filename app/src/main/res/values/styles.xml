<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para los títulos -->
    <style name="Titulo_Diseño">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="Input_Diseño">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">#BF79FF5A</item>
    </style>

    <style name="SectionTitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/nav_item_background_with_border</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="itemVerticalPadding">8dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange2</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/orange2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item> <!-- Color del texto -->
        <item name="android:textColorHint">@color/black</item> <!-- Color del hint -->

    </style>

<!-- Estilo para campos de texto -->
<style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxCornerRadiusBottomEnd">8dp</item>
    <item name="boxCornerRadiusBottomStart">8dp</item>
    <item name="boxCornerRadiusTopEnd">8dp</item>
    <item name="boxCornerRadiusTopStart">8dp</item>
    <item name="boxStrokeColor">#1E3A8A</item>
    <item name="hintTextColor">#1E3A8A</item>
</style>

<!-- Estilo para textos de título -->
<style name="TitleText">
    <item name="android:textSize">22sp</item>
    <item name="android:textColor">#1E3A8A</item>
    <item name="android:fontFamily">@font/opensans_bold</item>
</style>

<!-- Estilo para textos normales -->
<style name="BodyText">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#334155</item>
    <item name="android:fontFamily">@font/opensans_regular</item>
</style>
</resources>
