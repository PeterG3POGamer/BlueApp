                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/imgPesosLocales"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="Icono de balanza"
                    android:src="@drawable/balanza"/>

                <TextView
                    android:id="@+id/tvPesosLocales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesos Locales"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Impresora -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImpresoraContainer"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_gray_low">

            <LinearLayout
                android:id="@+id/cardImpresora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/imgImpresora"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_impresora"
                    android:contentDescription="Impresora"/>

                <TextView
                    android:id="@+id/tvImpresora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impresora"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Config Bal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardConfigBalContainer"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_gray_low">

            <LinearLayout
                android:id="@+id/cardConfigBal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/imgConfigBal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_config"
                    android:contentDescription="Confi"/>

                <TextView
                    android:id="@+id/tvConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conexion y Configuración"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</LinearLayout>
