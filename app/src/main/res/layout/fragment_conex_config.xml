<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conexion y Captura"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- Sección de entrada y botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/etPesaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ingrese el pesaje"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:background="@android:color/black"
            android:padding="16dp"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnTestear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testear"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Línea separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="@android:color/darker_gray" />

    <!-- Peso Crudo Sin Formatear -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/etPesoCrudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:gravity="start"
            android:padding="12dp"
            android:text="Descripción detallada"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:scrollbars="vertical" />
    </ScrollView>



    <!-- Botones de configuración -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnConfConexion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Conf. Conexión"
            android:padding="12dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnConfCaptura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Conf. Captura"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Contenedor central expandible -->
    <FrameLayout
        android:id="@+id/contenedorConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />
</LinearLayout>
