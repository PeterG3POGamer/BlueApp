<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/toast_h_background_top"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- TÍTULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D1C4B7"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:text="CONFIGURACIÓN DE CAPTURA"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreDispositivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E2C391"
                android:padding="1dp"
                android:text="Nombre: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMacDispositivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="#E2C391"
                android:padding="1dp"
                android:text="MAC: "
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- CADENA CLAVE -->
            <!-- LONGITUD Y FORMATO PESO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:text="Patron Inicio"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtCadenaClave"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:gravity="center"
                        android:hint="Ej: ="
                        android:padding="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:text="Patron Cierre"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtCadenaClaveCierre"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:gravity="center"
                        android:hint="Ej: ;"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- LONGITUD Y FORMATO PESO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:text="Longitud de Enteros"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtLongitud"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:gravity="center"
                        android:hint="Ej: 10"
                        android:inputType="number"
                        android:padding="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:text="Longitud Decimales"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtFormatoPeso"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:gravity="center"
                        android:hint="Ej: 2"
                        android:inputType="number"
                        android:padding="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="8dp"
                            android:text="Datos en Bloques"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Imagen de ejemplo"
                            android:src="@drawable/baseline_info_24" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDataBloque"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/cardview_dark_background"
                        android:text="ENTERO"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- INFORMACIÓN DE DISPOSITIVO BLUETOOTH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/toast_h_background_top"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D1C4B7"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:text="DISPOSITIVO BLUETOOTH"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgTipoConexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <RadioButton
                    android:id="@+id/rbPreviamenteConectados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:padding="8dp"
                    android:text="Previamente conectados" />

                <RadioButton
                    android:id="@+id/rbConectadoAhora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Conectado ahora" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Spinner con borde negro y altura ajustada -->
                <Spinner
                    android:id="@+id/spinnerDispositivosBluetooth"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@color/colorRowBackground1"
                    android:padding="8dp"
                    android:visibility="visible" />

                <!-- ImageButton con borde negro y altura ajustada -->
                <ImageButton
                    android:id="@+id/btnRefreshBluetooth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_button_background"
                    android:contentDescription="Actualizar conexión Bluetooth"
                    android:padding="8dp"
                    android:src="@drawable/baseline_refresh_24" />
            </LinearLayout>

        </LinearLayout>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:padding="0dp"
                android:text="GUARDAR"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:padding="4dp"
                android:text="ACTUALIZAR"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:padding="4dp"
                android:text="LIMPIAR"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1C4B7"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="DISPOSITIVOS CONFIGURADOS"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:paddingTop="6dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
