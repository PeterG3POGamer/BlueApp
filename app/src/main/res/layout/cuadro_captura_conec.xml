<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@drawable/toast_h_background_top"
        android:layout_marginTop="5dp">

        <!-- TÍTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIGURACIÓN DE CAPTURA"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:background="#D1C4B7" />
        <TextView
            android:id="@+id/txtNombreDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:padding="1dp"
            android:background="#E2C391"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtMacDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAC: "
            android:padding="1dp"
            android:background="#E2C391"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- CADENA CLAVE -->
        <!-- LONGITUD Y FORMATO PESO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patron Inicio"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp" />

                <EditText
                    android:id="@+id/edtCadenaClave"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:hint="Ej: ="
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="0dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patron Cierre"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp" />

                <EditText
                    android:id="@+id/edtCadenaClaveCierre"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:hint="Ej: ;"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="0dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- LONGITUD Y FORMATO PESO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitud de Enteros"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp" />

                <EditText
                    android:id="@+id/edtLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:hint="Ej: 10"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="0dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitud Decimales"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="1dp" />

                <EditText
                    android:id="@+id/edtFormatoPeso"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:hint="Ej: 2"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="0dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datos en Bloques"
                        android:textStyle="bold"
                        android:paddingEnd="8dp" />

                    <ImageButton
                        android:id="@+id/btnInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_info_24"
                        android:contentDescription="Imagen de ejemplo"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDataBloque"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="ENTERO"
                    app:cornerRadius="8dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/cardview_dark_background" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- INFORMACIÓN DE DISPOSITIVO BLUETOOTH -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@drawable/toast_h_background_top"
        android:layout_marginTop="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISPOSITIVO BLUETOOTH"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:background="#D1C4B7" />

        <RadioGroup
            android:id="@+id/rgTipoConexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <RadioButton
                android:id="@+id/rbPreviamenteConectados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Previamente conectados"
                android:checked="true"
                android:layout_weight="1"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/rbConectadoAhora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Conectado ahora"
                android:layout_weight="1"
                android:padding="8dp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Spinner con borde negro y altura ajustada -->
            <Spinner
                android:id="@+id/spinnerDispositivosBluetooth"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="@drawable/border_black_spinner"
                android:visibility="visible" />

            <!-- ImageButton con borde negro y altura ajustada -->
            <ImageButton
                android:id="@+id/btnRefreshBluetooth"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_refresh_24"
                android:background="@drawable/border_black_spinner"
                android:padding="8dp"
                android:contentDescription="Actualizar conexión Bluetooth" />
        </LinearLayout>

    </LinearLayout>



    <!-- BOTONES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="GUARDAR"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="ACTUALIZAR"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="LIMPIAR"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- ListView para mostrar los registros -->
    <ListView
        android:id="@+id/listViewRegistros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingTop="6dp"
        android:layout_marginTop="6dp" />
</LinearLayout>
