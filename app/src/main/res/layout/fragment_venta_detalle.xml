<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- SECCIÓN 1: Centro todo, ocupara todo el ancho -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"> <!-- Usa layout_marginBottom en lugar de marginBottom -->

        <TextView
            android:id="@+id/tvNombreComprobante"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comprobante de Venta"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tviDEmpresa"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvRSEmpresa"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SerlanVentas"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvCorrelativo"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ED95-2"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- SECCIÓN 2: Cliente Nombre e ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha: 2025-03-05"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hora: 19:52:21"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="end"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente: JUANITO VENTURA"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvIdCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N° DOC: 75238151"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- ventas List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPesos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="2dp"/>

    <!-- SECCIÓN 3: Detalles de la Venta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTotalJabas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Jabas: 10"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tvTotalPollos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Pollos: 20"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTotalPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Peso: 148.00 kg"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTotalNeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Neto: 108.00"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvPKPollo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso Pollo: 5.00 kg"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTotalPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total a Pagar: 540.00"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- SECCIÓN 4: Mensaje y Sede -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvMensaje"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡GRACIAS POR SU COMPRA!"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvSede"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GALPON 1 NUCLEO 4"
            android:textSize="14sp"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>
