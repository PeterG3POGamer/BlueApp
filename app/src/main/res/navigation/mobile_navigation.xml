        tools:layout="@layout/fragment_bluetooth" />

    <fragment
        android:id="@+id/nav_initReporteGuias"
        android:name="com.example.blueapp.ui.Web.GuiasWebFragment"
        android:label="@string/menu_bt_balanza"
