<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo para el estado normal -->
    <item android:drawable="@drawable/edittext_box_normal" />

    <!-- Fondo para el estado enfocado (cuando el EditText tiene el foco) -->
    <item android:drawable="@drawable/edittext_box_focused" android:state_focused="true" />

    <!-- Fondo para el estado presionado (cuando se presiona el EditText) -->
    <item android:drawable="@drawable/edittext_box_pressed" android:state_pressed="true" />

    <!-- Fondo para el estado deshabilitado (cuando el EditText estÃ¡ deshabilitado) -->
    <item android:drawable="@drawable/edittext_box_disabled" android:state_enabled="false" />
</selector>
