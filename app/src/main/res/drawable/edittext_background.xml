<!-- Definición del fondo personalizado para EditText -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradiente para el fondo -->
    <gradient
        android:startColor="#1B979595"
        android:endColor="#369E9E9E"
        android:angle="90" />

    <!-- Esquinas redondeadas -->
    <corners android:radius="0dp" /> <!-- Ajusta el radio según tus preferencias -->

    <!-- Borde exterior con sombra para simular profundidad -->
    <stroke
        android:width="5dp"
        android:color="#7C7777" />

    <!-- Borde interior para resaltar el fondo -->
    <stroke
        android:width="1dp"
        android:color="#DF000000" /> <!-- Color blanco para resaltar -->

    <!-- Efecto de sombra -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp" />
</shape>
