<!-- res/drawable/toast_background_error.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo normal -->
    <solid android:color="#FFFFFF" /> <!-- Color blanco de fondo -->

    <!-- Borde cuadrado en la parte superior -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="8dp" /> <!-- Radio de esquinas de 8dp para la parte inferior -->

    <!-- Borde delgado negro -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Borde de 1dp de ancho y color negro -->

</shape>
